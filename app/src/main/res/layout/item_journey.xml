<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    android:layoutDirection="rtl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="شرم الشيخ"
                android:textColor="@color/color_hotel2"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/oldPriceTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="من 123 $"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/newPriceTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الي 123 $"
                    android:textColor="@color/color_hotel1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/savePriceTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="التوفير 123 $"
                    android:textColor="@color/color_hotel2"
                    android:textSize="12sp" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="السعر للشخص في الغرفة المزدوجة"
                android:textSize="10sp" />



            <include layout="@layout/include_jour_spinners"/>
            <include layout="@layout/include_jour_others"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/marker_color"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/detailTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:paddingRight="30dp"
                    android:paddingLeft="20dp"
                    android:text="تعد شرم الشيخ المكان المثالي للاستمتاع بأشعة الشمس الدافئة وممارسة الرياضات المائية والاسترخاء في المنتجعات الفاخرة!"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/elevator" />
            </FrameLayout>

            <include layout="@layout/include_jour_buttons"/>



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>